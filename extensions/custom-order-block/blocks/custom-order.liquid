{% comment %}
  Custom Order Block
  Displays product with configurable Option Groups (Dropdowns)
{% endcomment %}

<div class="custom-order-block" id="custom-order-{{ section.id }}">
  <div class="custom-order-container">
    <div id="order-loading" class="order-loading">
      <p>Loading your order...</p>
    </div>
    
    <div id="order-error" class="order-error" style="display: none;">
      <h2>Order Not Found</h2>
      <p id="error-message"></p>
    </div>
    
    <div id="order-content" class="order-content" style="display: none;">
      <div class="product-image-wrapper">
        <img id="product-image" src="" alt="" class="product-image" style="display: none;">
      </div>
      
      <div class="product-details">
        <h1 id="product-title" class="product-title"></h1>
        <p id="product-note" class="product-note"></p>
        
        <div id="options-container" class="options-container"></div>
        
        <div class="price-display">
          <span id="product-price" class="product-price">$0.00</span>
        </div>
        
        <div id="checkout-error" class="checkout-error" style="display: none;"></div>
        
        <button id="checkout-button" class="checkout-button">
          Proceed to Checkout
        </button>
        
        <p class="secure-notice">ðŸ”’ Secure checkout</p>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-order-block { max-width: 1200px; margin: 50px auto; padding: 20px; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; }
  .custom-order-container { background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); overflow: hidden; }
  .order-loading, .order-error { padding: 60px 20px; text-align: center; }
  .order-error { background: #fee; color: #c33; }
  .order-content { display: grid; grid-template-columns: 1fr 1fr; gap: 40px; padding: 40px; }
  
  @media (max-width: 768px) { .order-content { grid-template-columns: 1fr; } }
  
  .product-image-wrapper { min-height: 400px; background: #f5f5f5; border-radius: 8px; display: flex; align-items: center; justify-content: center; }
  .product-image { width: 100%; max-height: 500px; object-fit: cover; border-radius: 8px; }
  .product-title { font-size: 32px; font-weight: 600; margin-bottom: 15px; color: #333; }
  .product-note { color: #666; line-height: 1.6; margin-bottom: 30px; }
  
  /* NEW STYLES FOR DROPDOWNS */
  .options-container { margin-bottom: 25px; }
  .option-group { margin-bottom: 20px; }
  .option-label { display: block; font-weight: 600; margin-bottom: 8px; color: #333; font-size: 14px; }
  .option-select { 
    width: 100%; 
    padding: 12px; 
    border: 1px solid #ddd; 
    border-radius: 6px; 
    font-size: 16px; 
    background-color: white;
    cursor: pointer;
  }
  .option-select:focus { border-color: #5469d4; outline: none; }

  .price-display { margin-bottom: 30px; }
  .product-price { font-size: 36px; font-weight: bold; color: #333; }
  
  .checkout-error { padding: 12px; background: #fee; color: #c33; border-radius: 6px; margin-bottom: 20px; }
  .checkout-button { width: 100%; padding: 18px; background: #5469d4; color: white; border: none; border-radius: 6px; font-size: 16px; font-weight: 600; cursor: pointer; transition: background 0.2s; }
  .checkout-button:hover { background: #4158d0; }
  .checkout-button:disabled { background: #ccc; cursor: not-allowed; }
  .secure-notice { text-align: center; color: #999; font-size: 12px; margin-top: 15px; }
</style>

<script>
  (function() {
    // 1. Setup & Configuration
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');
    const shop = '{{ shop.permanent_domain }}';
    
    // PRODUCTION URL
    const appUrl = 'https://draft-order-app-rk3s.onrender.com';
    
    // Global State
    let orderData = null;
    let currentSelections = {}; // Stores { GroupName: { label, price } }

    if (!token) {
      showError('No order token provided');
      return;
    }
    
    // 2. Fetch Order Data
    fetch(`${appUrl}/api/get-order?token=${token}&shop=${shop}`, {
        mode: 'cors',
        credentials: 'omit',
        headers: { 'Content-Type': 'application/json' }
    })
      .then(res => {
         if (!res.ok) throw new Error(`Server returned ${res.status}`);
         return res.json();
      })
      .then(data => {
        console.log('Order data:', data);
        if (data.success) {
          orderData = data;
          renderOrder(data);
        } else {
          showError(data.error || 'Order not found');
        }
      })
      .catch(err => {
        console.error('Fetch error:', err);
        showError('Failed to load order. Please contact support.');
      });
    
    // 3. Render Functions
    function renderOrder(data) {
      document.getElementById('order-loading').style.display = 'none';
      document.getElementById('order-content').style.display = 'grid';
      
      // Image
      if (data.productImage && data.productImage.length > 0) {
        const imgEl = document.getElementById('product-image');
        imgEl.src = data.productImage;
        imgEl.alt = data.productTitle;
        imgEl.style.display = 'block';
      } else {
        document.querySelector('.product-image-wrapper').innerHTML = '<p style="color: #999;">No image available</p>';
      }
      
      // Title & Note
      document.getElementById('product-title').textContent = data.productTitle;
      if (data.note) document.getElementById('product-note').textContent = data.note;
      
      // *** RENDER OPTION GROUPS ***
      const container = document.getElementById('options-container');
      container.innerHTML = ''; // Clear existing
      
      // Check if we have new Option Groups or fallback to old Variants
      const optionGroups = data.optionGroups || [];
      
      if (optionGroups.length > 0) {
        // Render Dropdowns
        optionGroups.forEach(group => {
           const groupDiv = document.createElement('div');
           groupDiv.className = 'option-group';
           
           const label = document.createElement('label');
           label.className = 'option-label';
           label.innerText = group.name;
           
           const select = document.createElement('select');
           select.className = 'option-select';
           select.dataset.groupName = group.name; // Tag for identification
           
           group.values.forEach(val => {
             const option = document.createElement('option');
             option.value = val.label;
             option.dataset.price = val.price; // Store price in data attribute
             // Display: "10x10 (+$10.00)"
             const priceDisplay = parseFloat(val.price) > 0 ? ` (+$${val.price})` : '';
             option.innerText = `${val.label}${priceDisplay}`;
             select.appendChild(option);
           });
           
           // Event Listener for Price Update
           select.addEventListener('change', updateTotalPrice);
           
           groupDiv.appendChild(label);
           groupDiv.appendChild(select);
           container.appendChild(groupDiv);
        });
        
        // Initial Price Calculation
        updateTotalPrice();
        
      } else if (data.variants && data.variants.length > 0) {
        // FALLBACK: Support for old orders created before this update
        const groupDiv = document.createElement('div');
        groupDiv.innerHTML = '<p>Select Option:</p>';
        const select = document.createElement('select');
        select.className = 'option-select';
        select.dataset.groupName = "Variant";
        
        data.variants.forEach(v => {
           const option = document.createElement('option');
           option.value = v.name;
           option.dataset.price = v.price;
           option.innerText = `${v.name} - $${v.price}`;
           select.appendChild(option);
        });
        select.addEventListener('change', updateTotalPrice);
        groupDiv.appendChild(select);
        container.appendChild(groupDiv);
        updateTotalPrice();
      }
    }
    
    // 4. Price Calculation Logic
    function updateTotalPrice() {
       let total = 0;
       const selects = document.querySelectorAll('.option-select');
       
       // Loop through all dropdowns
       selects.forEach(select => {
          const selectedOption = select.options[select.selectedIndex];
          const price = parseFloat(selectedOption.dataset.price) || 0;
          total += price;
       });
       
       document.getElementById('product-price').innerText = `$${total.toFixed(2)}`;
    }
    
    function showError(message) {
      document.getElementById('order-loading').style.display = 'none';
      document.getElementById('order-error').style.display = 'block';
      document.getElementById('error-message').textContent = message;
    }
    
    // 5. Checkout Logic
    document.getElementById('checkout-button').addEventListener('click', function() {
      const button = this;
      button.disabled = true;
      button.textContent = 'Processing...';
      
      // Gather Selections
      const selects = document.querySelectorAll('.option-select');
      const selectionParts = [];
      let finalPrice = 0;
      
      selects.forEach(select => {
         const group = select.dataset.groupName;
         const value = select.value;
         const price = parseFloat(select.options[select.selectedIndex].dataset.price) || 0;
         
         selectionParts.push(`${value}`); // Construct name like "10x10 / Cotton"
         finalPrice += price;
      });
      
      const variantName = selectionParts.join(' / ');
      
      fetch(`${appUrl}/api/process-checkout`, {
        method: 'POST',
        mode: 'cors',
        credentials: 'omit',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          token: token,
          draftOrderId: orderData.draftOrderId,
          variantName: variantName, // Combined name
          price: finalPrice.toFixed(2), // Calculated total
          shop: shop
        })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success && data.checkoutUrl) {
          window.location.href = data.checkoutUrl;
        } else {
          throw new Error(data.error || 'Checkout failed');
        }
      })
      .catch(err => {
        console.error('Checkout error:', err);
        document.getElementById('checkout-error').style.display = 'block';
        document.getElementById('checkout-error').textContent = err.message || 'Failed to process checkout.';
        button.disabled = false;
        button.textContent = 'Proceed to Checkout';
      });
    });
  })();
</script>

