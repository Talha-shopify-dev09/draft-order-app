// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id             String    @id
  shop           String
  state          String
  isOnline       Boolean   @default(false)
  scope          String?
  expires        DateTime?
  accessToken    String
  userId         BigInt?
  firstName      String?
  lastName       String?
  email          String?
  accountOwner   Boolean   @default(false)
  locale         String?
  collaborator   Boolean?  @default(false)
  emailVerified  Boolean?  @default(false)
  refreshToken         String?
  refreshTokenExpires  DateTime?
}

// --- ADDED MODELS BELOW ---

model OrderBlock {
  id                String    @id
  shop              String
  productTitle      String
  customerName      String?
  customerEmail     String?
  note              String?
  optionGroups      String    @default("[]") // Stores JSON string of options
  images            String    @default("[]") // Stores JSON string of image URLs
  video             String?                 // Stores video URL
  shopifyDraftOrderId String?                 // Stores the ID of the corresponding Shopify Draft Order (populated at checkout)
  isPurchased       Boolean   @default(false) // Tracks if the order has been purchased
  checkoutUrl       String?                 // Stores the checkout URL of the Shopify Draft Order (populated at checkout)
  createdAt         DateTime  @default(now())
}

model Template {
  id            String   @id @default(uuid())
  shop          String
  name          String
  productTitle  String
  optionGroups  String   @default("[]")
  images        String?  @default("[]")
  createdAt     DateTime @default(now())
}
